# EtsyNova Configuration
APP_NAME=EtsyNova
DASHBOARD_SHARED_EMAIL=admin@etsynova.com

# Session & Security
SESSION_SECRET=your-secret-key-here

# Etsy API Configuration
ETSY_CLIENT_ID=your-etsy-client-id
ETSY_CLIENT_SECRET=your-etsy-client-secret
ETSY_REDIRECT_URI=http://localhost:8000/auth/etsy/callback

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project
GCP_REGION=us-central1

# Cache & Storage
USE_REDIS_CACHE=false
PERSIST_PII=false

# Application Mode
MOCK_MODE=false

# Gmail Integration (Unified Inbox)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Email Retention Policy (in days)
EMAIL_RETENTION_DAYS=90
ORDER_EMAIL_RETENTION_DAYS=365

# Data Encryption
ENCRYPTION_KEY=your-32-char-encryption-key-here

# LLM Configuration
LLM_PROVIDER=none
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
GOOGLE_API_KEY=your-google-key

# LangSmith Configuration
LANGSMITH_API_KEY=your-langsmith-key
LANGSMITH_PROJECT=EtsyNova
LANGCHAIN_TRACING_V2=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-domain.com
