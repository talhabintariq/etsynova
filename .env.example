# EtsyNova Configuration
# Environment: venv-etsynova

# Application Settings
APP_NAME=EtsyNova
APP_VERSION=1.0.0
ENVIRONMENT=development
VENV_NAME=venv-etsynova

# Mock Mode (set to true for testing without Etsy credentials)
MOCK_MODE=false

# Database Configuration
DATABASE_URL=postgresql://etsynova:password123@db:5432/etsynova_db
POSTGRES_USER=etsynova
POSTGRES_PASSWORD=password123
POSTGRES_DB=etsynova_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Etsy API Configuration (get from https://www.etsy.com/developers)
ETSY_CLIENT_ID=your_etsy_client_id_here
ETSY_CLIENT_SECRET=your_etsy_client_secret_here
ETSY_REDIRECT_URI=http://localhost:8000/auth/etsy/callback

# OpenAI Configuration (optional, for AI insights)
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here

# Dashboard Configuration
DASHBOARD_SHARED_EMAIL=test@example.com
DASHBOARD_SHARED_PASSWORD=testpassword123

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
